{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Aliases */
        "baseUrl": "../src",
        "paths": {
            "@components/*": ["components/*"],
            "@utils/*": ["utils/*"],
            "@styles/*": ["styles/*"],
            "@reducers/*": ["reducers/*"],
            "@actions/*": ["actions/*"],
            "@hooks/*": ["hooks/*"],
            "@modules/*": ["modules/*"],
            "@interfaces/*": ["types/interfaces/*"],
            "@enums/*": ["types/enums/*"],
            "@store/*": ["store/*"]
        }
    },
    "skipLibCheck": true,
    "include": ["../src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
